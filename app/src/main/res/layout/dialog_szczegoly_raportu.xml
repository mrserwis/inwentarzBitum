<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogSzczegolyRaportuRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Podstawowe informacje -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numer Raportu:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvNumerRaportu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Raportu:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvDataRaportu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kto dodał:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvKtoDodalRaport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zakres prac:"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvZakresPracRaport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <!-- Tabela WZ -->
        <TableLayout
            android:id="@+id/tableWZRaport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0"
            android:divider="@android:color/darker_gray"
            android:showDividers="middle|beginning|end"/>

        <!-- Tabela Towarów -->
        <TableLayout
            android:id="@+id/tableTowaryRaportSzczegoly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0"
            android:divider="@android:color/darker_gray"
            android:showDividers="middle|beginning|end"/>
    </LinearLayout>
</ScrollView>
